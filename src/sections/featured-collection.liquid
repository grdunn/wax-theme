<div>
  {{section.settings.title}}
  {{section.settings.subtext}}
  {% for product in section.settings.collection.products %}
    {{ product.title }}
  {% endfor %}
</div>

{% schema %}
  {
    "name": "Featured Collection",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "text",
        "id": "subtext",
        "label": "Sub Text"
      },
      {
        "type": "collection",
        "id": "collection",
        "label": "Featured Collection"
      }
    ],
    "presets": [
      {
        "name": "Featured Collection"
      }
    ],
    "enabled_on": {
      "templates": ["index"]
    }
  }
{% endschema %}